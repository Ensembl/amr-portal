{% from "components/navigation-link/navigation-link.njk" import navigationLink %}

<div class="subheader">
  <div class="left-wrapper">
    <a href="/">
      <img src="/assets/images/icons/ensembl-icons/icon_home.svg" class="home-icon" />
      <span class="visually-hidden">
        Home page
      </span>
    </a>

    <div class="title-wrapper">
      <span class="portal-title">
        Anti-microbial resistance portal
      </span>

      <span class="page-title">
        {% call navigationLink({ href: "/data", activeAnchorClass: "active", pageUrl: page.url }) -%}
          Data resources
        {%- endcall %}
      </span>

    </div>
  </div>

  <div class="right-wrapper">
    <amr-header-release>
      <span class="data-release">
        <span class="data-release-label">
          Latest data release
        </span>
        <span class="data-release-date">
          yyyy-mm
        </span>
      </span>
    </amr-header-release>

    <a href="/about/">
      <img src="/assets/images/icons/ensembl-icons/icon_question_circle.svg" class="circle-icon" />
      <span class="visually-hidden">
        Help page
      </span>
    </a>
    <a href="/usage/">
      <img src="/assets/images/icons/ensembl-icons/icon_info_circle.svg" class="circle-icon" />
      <span class="visually-hidden">
        About page
      </span>
    </a>
  </div>
</div>