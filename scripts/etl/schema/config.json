{
  "title": "AMR ETL config",
  "type": "object",
  "required": [
    "filterCategories",
    "views"
  ],
  "properties": {
    "filterCategories": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "id",
          "label",
          "filter_label",
          "dataset"
        ],
        "properties": {
          "id": {
            "type": "string",
            "description": "Same string as property name"
          },
          "label": {
            "type": "string",
            "description": "Display label for filter"
          },
          "filter_label": {
            "type": "string",
            "description": "SQL used to generate label, can be just a column name"
          },
          "dataset": {
            "type": "string",
            "description": "dataset used to generate filters"
          }
        }
      }
    },
    "views": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required":[
          "name",
          "dataset",
          "categoryGroups"
        ],
        "properties": {
          "name": {
            "type": "string",
            "description": "Display name of view"
          },
          "dataset": {
            "type": "string",
            "description": "Sets which dataset is used by the view"
          },
          "categoryGroups": {
            "type": "array",
            "description": "Main category groups for this view",
            "items": {
              "type": "object",
              "properties": {
                "name": {
                  "type": "string",
                  "description": "Display name for category group"
                },
                "categories": {
                  "type": "array",
                  "items": {
                    "type": "string",
                    "description": "category name"
                  }
                }
              }
            }
          },
          "otherCategoryGroups": {
            "type": "array",
            "description": "List of additional category groups avaliable for this view",
            "items": {
              "type": "object",
              "properties": {
                "name": {
                  "type": "string",
                  "description": "Display name for category group"
                },
                "categories": {
                  "type": "array",
                  "items": {
                    "type": "string",
                    "description": "category name"
                  }
                }
              }
            }
          },
          "columns" : {
            "type": "array",
            "description": "List of additional category groups avaliable for this view",
            "items": {
              "type": "object",
              "properties": {
                "name": {
                  "type": "string",
                  "description": "column name"
                },
                "enabled": {
                  "type": "boolean",
                  "description": "Indicates if the column will be visible (enabled) by default"
                },
                "rank": {
                  "type": "number",
                  "description": "defines the column display order in ASC order"
                }
              }
            }
          }
        }
      }
    },
    "special_columns": {
      "type": "object",
      "additionalProperties": {
        "type": "object",
        "properties": {
           "type": {
             "type":"string"
           },
           "label": {
             "type":"string"
           },
           "sortable": {
             "type":"boolean"
           },
           "hidden": {
             "type":"boolean"
           },
           "template": {
             "type":"string"
           }
        }
    }
    }
}
}