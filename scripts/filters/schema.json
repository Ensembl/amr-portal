{
  "title": "AMR Filters",
  "type": "object",
  "required": [
    "filterCategories",
    "filterViews"
  ],
  "properties": {
    "filterCategories": {
      "type": "object",
      "additionalProperties": {
        "type": "object",
        "required": [
          "id",
          "label",
          "filter_label"
        ],
        "properties": {
          "id": {
            "type": "string",
            "description": "Same string as property name"
          },
          "label": {
            "type": "string",
            "description": "Display label for filter"
          },
          "filter_label": {
            "type": "string",
            "description": "SQL used to generate label, can be just a column name"
          }
        }
      }
    },
    "filterViews": {
      "type": "array",
      "minItems":1,
      "items": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string",
            "description": "Display name of view"
          },
          "categoryGroups": {
            "type": "array",
            
            "description": "Main category groups for this view",
            "items": {
              "type": "object",
              "properties": {
                "name": {
                  "type": "string",
                  "description": "Display name for category group"
                },
                "categories": {
                  "type": "array",
                  "items": {
                    "type": "string",
                    "description": "category name"
                  }
                }
              }
            }
          },
          "otherCategoryGroups": {
            "type": "array",
            "description": "List of additional category groups avaliable for this view",
            "items": {
              "type": "object",
              "properties": {
                "name": {
                  "type": "string",
                  "description": "Display name for category group"
                },
                "categories": {
                  "type": "array",
                  "items": {
                    "type": "string",
                    "description": "category name"
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}